{
  "manifest_version": 3,
  "name": "Andika AI - Your Writing Companion",
  "version": "1.0",
  "description": "On-device AI writing assistant powered by Gemini Nano. Private, fast, and free. No data sent to servers.",
  "permissions": ["sidePanel", "activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Andika AI"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/utils.js", "lib/ai-manager.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
